<%- include("partials/header.ejs") %>

<!---------------------------------------------------------------->

<head>
    <link rel="stylesheet" href="css/styles_rsvp.css">
</head>

<!---------------------------------------------------------------->

<section>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="images/1.png" alt="" width="270px" height="500px" style="margin-top: 64px;border-radius: 16px;">
        <h1 class="display-5 fw-bold text-body-emphasis" style="color: wheat !important;font-family: 'Pinyon Script', cursive !important; font-size: 5rem;">Namaste</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4" style="font-size: 1.5rem;">If you get the time, please fill out this form so that we get a rough estimate.</p>
          <p style="font-size: 1.3rem;">-(Jitna accurate, utne better arrangements honge, nahi toh khaana kam padne par mat daatna)-</p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          </div>
        </div>
      </div>
</section>

<!---------------------------------------------------------------->

<section>
    <form id="rsvpForm">
        <div>
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div>
          <label for="guests">Number of Guests:</label>
          <input type="number" id="guests" name="guests" min="1" required>
        </div>
        <div>
          <label for="arrival">Estimated Date and Time of Arrival:</label>
          <input type="datetime-local" id="arrival" name="arrival" required>
        </div>
        <button type="submit" >Submit</button>
      </form>
      <div id="successMessage" style="display: none; color: green;">
        RSVP saved successfully!
      </div>
</section>

<!---------------------------------------------------------------->
<script src="rsvp.js"></script>
