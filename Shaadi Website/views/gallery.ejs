<section>
    <div class="p-5 text-center bg-body-tertiary rounded-3 jumbo">
      <h1 class="text-body-emphasis" style="font-family: 'Pinyon Script', cursive; margin-top: 16px;font-size: 4.5rem;">
        Shaadi ki saari acchi buri yaadon ko ek jagah submit kare...
      </h1>
      <form id="uploadForm" action="/uploadgallery" method="POST" enctype="multipart/form-data" class="form" style="margin-top: 32px;">
        
        <label for="media" style="font-weight: bold;margin-top: 64px; font-size: 1.5rem;">Choose a video or photo file:</label>
        <br>
        <div class="input">
          <input type="file" id="media" name="media" accept="image/*,video/*" required>
        </div>
        
        <!-- Video/Photo Loading Progress Bar -->
        <div id="loadProgressContainer" style="width: 50%; height: 4px; background-color: #f3f3f3; border-radius: 10px; margin: 20px auto; display: none;">
          <div id="loadProgressBar" style="width: 0%; height: 100%; background-color: #d9c8b4; border-radius: 10px;"></div>
        </div>
  
        <!-- File Name Display (White Background) -->
        <div id="fileNameContainer" style="width: 50%; height: 30px; background-color: white; border-radius: 10px; margin: 10px auto; padding: 5px; display: none;">
          <span id="fileName" style="color: black;"></span>
        </div>
  
        <br><br>
        <button class="btn" type="submit">Upload Media</button>
  
        <!-- Upload Progress Bar -->
        <div id="progressContainer" style="width: 25%; height: 4px; background-color: #f3f3f3; border-radius: 10px; margin: 20px auto; display: none;">
          <div id="progressBar" style="width: 0%; height: 100%; background-color: #724393; border-radius: 10px;"></div>
        </div>
      </form>
    </div>
</section>

